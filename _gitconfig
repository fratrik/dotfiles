[user]
	name = Craig Fratrik
	email = cfratrik@gmail.com

[alias]
    st = status
    co = checkout
    br = branch
    p = !CURR=$(git branch | awk '/\\\\*/ {print $2}') && git push -u origin $CURR
    rpo = remote prune origin
    mp = !CURR=$(git branch | awk '/*/ {print $2}') && git merge origin/$CURR
    aa = add -A
    pa = push --all

[color]
	diff = auto
	status = auto
	branch = auto

[core]
    editor = vi
	excludesfile = ~/.gitignore


